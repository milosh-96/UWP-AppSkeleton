<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppSkeleton">

    <Style TargetType="TextBlock" x:Name="MenuIcon">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"></Setter>
        <Setter Property="Margin" Value="0,0,20,0"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>        
    </Style>
    <Style TargetType="ListBoxItem" x:Name="MenuListBoxItem">
        <Setter Property="MinHeight" Value="50"></Setter>
    </Style>
</ResourceDictionary>
